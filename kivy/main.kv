<CustomToolbar>:
    orientation: 'horizontal'
    spacing: 20
    padding: [10, 10, 10, 10]

    # Tools Button
    Button:
        size_hint: None, None
        size: 80, 80
        background_normal: 'assets/tools.png'  # Replace with the path to your "tools" icon
        background_down: 'assets/tools.png'
        text: ''
    
    # Mic Button
    Button:
        size_hint: None, None
        size: 80, 80
        background_normal: 'assets/mic.png'  # Replace with the path to your "mic" icon
        background_down: 'assets/tools.png'
        text: ''
    
    # Settings Button
    Button:
        size_hint: None, None
        size: 80, 80
        background_normal: 'assets/settings.png'  # Replace with the path to your "settings" icon
        background_down: 'assets/settings.png'
        text: ''
